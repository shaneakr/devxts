
<%= content_for :js_libs, "modernizr parallax" %>

<main class="landing-4">
<div class="parallax-window" data-parallax="scroll" data-speed="0.5" data-image-src="<%= asset_path('rrt/stock/landscape_12.jpg') %>">
  <img src="<%= asset_path('rrt/stock/landscape_12.jpg') %>" style="display: none;">

  <div class="container">
    <nav class="navbar navbar-landing  navbar-expand-lg">
      <a href="javascript:" class="navbar-brand"><%= image_tag image_path('rrt/pyrrmid_64.png'), width: 32, height: 32, class: 'mr-2'%>DevXTesting</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#standardNavbar" aria-controls="standardNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="standardNavbar">
        <ul class="nav navbar-nav ml-auto">
          <li class="nav-item ">
            <%= link_to "Home", root_url, :style => 'color: #FFFFFF' %>
          </li>
          <!--
          <li class="nav-item ">
            <a class="nav-link" href="javascript:">ABOUT</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="javascript:">TEAM</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="javascript:">CONTACT</a>
          </li>-->
          <li class="nav-item "style="color: white;">
            <%= link_to "Get Paid To Test", home_testers_url, :style => 'color: #FFFFFF' %>
           <!-- <a class="nav-link" style="color: white;" href=>GET PAID TO TEST</a>-->
          </li>
        </ul>
      </div>
    </nav>
    <div class="row pb-5">
      <div class="col-12 col-md-7 text-white mt-5 pt-5 pb-5">
        <h1 class="text-shadow-light leading-normal">Finally...Measure The Success Of Your Developer Experience</h1>
        <p class="lead font-weight-medium mt-5 text-shadow-light">We empower high-growth developer focused companies to leverage a diverse set of developers to get valuable feedback to ensure their developer
        experience is built for everyone.</p>
        <!--<a class="btn btn-lg btn-success" href="javascript:">Find Out More</a>-->

      </div>
      <div class="col-12 col-md-5 mt-5 pt-5 pb-5">
        <%= form_tag('/company/waitlist', {class:"form d-flex flex-column bg-white p-4"}) do %>
          <% if flash[:notice] %>
            <p class="text-center" style="color:green;font-weight:bold;"><%= flash[:notice] %></p>
          <% end %>
          <p class="text-center">Get started in minutes, sign up now</p>
          <label class="sr-only" for="inlineFormInputName2">Email</label>

          <label class="sr-only" for="inlineFormInputGroupUsername2">Name</label>
          <div class="mb-2 mb-sm-0">
            <div class="input-group input-group-sm mb-2">
              <span class="input-group-prepend" id="basic-addon1"><div class="input-group-text"><%= theme_icon_tag "user" %></div></span>
              <input type="text" name="name" class="form-control" id="inlineFormInputGroupUsername2" placeholder="Enter Your Name">
            </div>
          </div>
          <div class="input-group input-group-sm mb-2">
            <span class="input-group-prepend" id="basic-addon1"><div class="input-group-text"><%= theme_icon_tag "email" %></div></span>
            <input type="email" name="email" class="form-control" id="inlineFormInputName2" placeholder="Your Email">
          </div>

          <button class="btn btn-primary ml-auto">Sign Up</button>
        <% end %>
      </div>

    </div>

  </div>
</div>


</main>

