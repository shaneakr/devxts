<% @title = "Listing projects" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Projects/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_project_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Project
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Title</th>
                                          <th>Description</th>
                                          <th>Goal</th>
                                          <th>Document</th>
                                          <th>Test devise</th>
                                          <th>Test age start</th>
                                          <th>Test age end</th>
                                          <th>Test income start</th>
                                          <th>Test income end</th>
                                          <th>Test gender</th>
                                          <th>Test country</th>
                                          <th>Test specialities</th>
                                          <th>Num testers start</th>
                                          <th>Num testers end</th>
                                          <th>Test end date</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @projects.each do |project| %>
                  <tr>
                                          <td><%= project.title %></td>
                                          <td><%= project.description %></td>
                                          <td><%= project.goal %></td>
                                          <td><%= project.document %></td>
                                          <td><%= project.test_devise %></td>
                                          <td><%= project.test_age_start %></td>
                                          <td><%= project.test_age_end %></td>
                                          <td><%= project.test_income_start %></td>
                                          <td><%= project.test_income_end %></td>
                                          <td><%= project.test_gender %></td>
                                          <td><%= project.test_country %></td>
                                          <td><%= project.test_specialities %></td>
                                          <td><%= project.num_testers_start %></td>
                                          <td><%= project.num_testers_end %></td>
                                          <td><%= project.test_end_date %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), project, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_project_path(project), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), project, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @projects.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No projects.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
